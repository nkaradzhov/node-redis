{
  "npm": {
    "publish": true,
    "publishArgs": ["--access", "public"]
  },
  "git": {
    "tagName": "bloom@${version}",
    "tagMatch": "bloom@*",
    "commitMessage": "Release ${tagName}",
    "tagAnnotation": "Release ${tagName}",
    "commitArgs": "--all",
    "requireCleanWorkingDir": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "package.json",
        "path": ["peerDependencies.@redis/client"],
        "versionPrefix": "^"
      }
    }
  }
}
